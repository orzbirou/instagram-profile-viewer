{
  "name": "instagram-profile-viewer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:backend": "npm --workspace apps/backend run start:dev",
    "dev:frontend": "npm --workspace apps/frontend run start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "npm --workspace apps/backend run build",
    "start:backend:prod": "node apps/backend/dist/main.js",
    "deploy:gh-pages": "npm run -w apps/frontend build -- --configuration production --base-href /instagram-profile-viewer/ --deploy-url /instagram-profile-viewer/"
  },
  "description": "Instagram Profile Viewer - Monorepo",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.3"
  }
}
